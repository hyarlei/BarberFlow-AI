# Database
DATABASE_URL=postgresql://barberflow_user:barberflow_pass@localhost:5432/barberflow
POSTGRES_DB=barberflow
POSTGRES_USER=barberflow_user
POSTGRES_PASSWORD=barberflow_pass

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
PORT=3001
NODE_ENV=development

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# Email Service (SendGrid/Nodemailer)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@barberflow.com

# WhatsApp Business API
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key
TENSORFLOW_SERVING_URL=http://localhost:8501

# Storage (AWS S3 ou similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=barberflow-uploads

# Monitoring and Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
